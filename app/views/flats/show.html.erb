<%= render 'shared/banner', img_path: "https://source.unsplash.com/1600x900/?bedroom", flat: @flat.name %>
<div class="container my-5">
  <div class="card-info">
    <p class="m-0"><i class="fas fa-map-marker-alt"></i> <%= @flat.address %></p>
    <p class="m-0"><i class="fas fa-info-circle"></i> <%= @flat.description %></p>
    <p class="m-0"><i class="fas fa-yen-sign"></i> <%= @flat.price_per_night %> per night</p>
    <p class="m-0"><i class="fas fa-users"></i> <%= @flat.number_of_guests %></p>
  </div>
  <%= link_to flats_path, class: "btn btn-outline-secondary mt-4" do %>
    <p class="m-0"><i class="fas fa-angle-left"></i> Back</p>
  <% end %>
</div>
